extends base

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(placeholder="Title", required, type="text", name="title", maxlength="20")
    input(placeholder="Description", required, type="text", name="description", maxlength="200")
    input(placeholder="Hashtags separated by a comma.", required, type="text", name="hashtags")
    input(type="submit", value="Upload Video")

